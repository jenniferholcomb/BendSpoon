@{
  Layout = "_Layout";
}

@using BendSpoon.Models;

<h1>Employee Management</h1>

@if (@Model.Count == 0)
{
  <h5><em>there are currently no employees</em></h5>
}
else
{
  foreach(Employee employee in Model)
  {
    <ul>
      <li>@employee.Name | @Html.ActionLink($"{employee.Name}", "Details", new { id = employee.EmployeeId })</li>
    </ul>
  }
}

<p>
  @Html.ActionLink("Add Employee", "Create")<br>
  @Html.ActionLink("Return Home", "Index", "Home")
</p>